# Modern Blog System Environment Configuration
# Copy this file to .env and fill in your actual values
# Author: Wasiq Syed

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Port for the application to run on
PORT=3000

# Environment mode: 'development' or 'production'
NODE_ENV=development

# Base URL for your application (important for email links and sitemap)
# For production: https://yourdomain.com
# For development: http://localhost:3000
BASE_URL=http://localhost:3000

# ============================================================================
# SECURITY & AUTHENTICATION
# ============================================================================

# JWT Secret - Generate a secure random string
# Run: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secure-jwt-secret-here

# hCaptcha Configuration (for production)
# Get keys from: https://www.hcaptcha.com/
HCAPTCHA_SECRET=your-hcaptcha-secret-key
HCAPTCHA_SITE_KEY=your-hcaptcha-site-key

# Admin Credentials - CHANGE THESE IMMEDIATELY
ADMIN_USER=admin
ADMIN_PASS=your-very-secure-password-here

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================

# SMTP Email Settings for notifications and subscriptions
# For Gmail: Use app password, not regular password
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM=your-email@gmail.com

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# SQLite database path (relative to project root)
DB_PATH=./database/blog_system.db

# ============================================================================
# SESSION & SECURITY SETTINGS
# ============================================================================

# Session timeout in milliseconds (30 minutes = 1800000)
SESSION_TIMEOUT=1800000

# Maximum login attempts before account lockout
MAX_LOGIN_ATTEMPTS=5

# Lockout duration in milliseconds (15 minutes = 900000)
LOCKOUT_DURATION=900000

# ============================================================================
# RATE LIMITING
# ============================================================================

# Rate limit window in milliseconds (15 minutes = 900000)
RATE_LIMIT_WINDOW=900000

# Maximum requests per window
RATE_LIMIT_MAX=100

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Logging level: 'error', 'warn', 'info', 'debug'
LOG_LEVEL=info

# Enable debug mode (true for development, false for production)
DEBUG=true

# ============================================================================
# PRODUCTION-ONLY SETTINGS
# ============================================================================

# Trust proxy (set to true when behind reverse proxy like nginx)
TRUST_PROXY=false

# Enable HTTPS redirects (production only)
FORCE_HTTPS=false

# ============================================================================
# OPTIONAL: THIRD-PARTY INTEGRATIONS
# ============================================================================

# Analytics (Google Analytics, etc.)
GA_TRACKING_ID=

# Social media links (for portfolio section)
LINKEDIN_URL=
GITHUB_URL=
TWITTER_URL=

# ============================================================================
# QUICK SETUP COMMANDS
# ============================================================================
#
# 1. Copy this file: cp .env.example .env
# 2. Generate JWT secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# 3. Set your admin password
# 4. Configure email settings
# 5. For production: Update NODE_ENV, BASE_URL, and hCaptcha keys
