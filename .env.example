# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Database Configuration
# DB_PATH=./database/blog_system.db

# JWT Configuration - Generate a strong secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-2024

# Email Configuration
EMAIL_USER=your-email@domain.com
EMAIL_PASS=your-email-password-or-app-password

# Server Configuration
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# Admin Configuration - Change these defaults!
ADMIN_USER=admin
ADMIN_PASS=change-this-secure-password

# hCaptcha Configuration
# Get your keys from https://hcaptcha.com/
HCAPTCHA_SITE_KEY=your-hcaptcha-site-key
HCAPTCHA_SECRET=your-hcaptcha-secret-key