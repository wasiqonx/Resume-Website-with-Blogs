{
  "name": "Modern Blog System",
  "version": "1.0.0",
  "description": "Secure blog management system with SQL database",
  "main": "server.js",
  "author": "Wasiq Syed",
  "engines": {
    "node": ">=20 <21"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "init-db": "node scripts/init-database.js",
    "reset-admin": "node scripts/reset-admin-password.js",
    "update-db": "./scripts/update-database.sh",
    "fix-slugs": "node scripts/fix-duplicate-slugs.js",
    "build": "npm install && node scripts/init-database.js || true",
    "rebuild-native": "npm rebuild better-sqlite3 || true",
    "postinstall": "npm run rebuild-native"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "helmet": "^7.0.0",
    "better-sqlite3": "^12.2.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.0.1",
    "dompurify": "^3.2.6",
    "jsdom": "^26.1.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "blog",
    "security",
    "authentication",
    "database",
    "sqlite"
  ],
  "author": "Wasiq Syed",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wasiqonx/Modern.git"
  },
  "bugs": {
    "url": "https://github.com/wasiqonx/Modern/issues"
  },
  "homepage": "https://github.com/wasiqonx/Modern#readme"
}
